<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_roundcorner_grayish_outlined"
        android:backgroundTint="#ece1cb"
        android:elevation="8dp">

        <TextView
            android:id="@+id/reactDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="8dp"
            android:text="How do you feel about the app?"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/reactLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reactDialogTitle"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reactGreat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Great!"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:drawableTopCompat="@drawable/image_great" />

            <TextView
                android:id="@+id/reactHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Happy"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:drawableTopCompat="@drawable/image_happy" />

            <TextView
                android:id="@+id/reactWow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Wow!"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:drawableTopCompat="@drawable/image_wow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reactLayout1"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reactAngry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Angry!"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:drawableTopCompat="@drawable/image_angry" />

            <TextView
                android:id="@+id/reactSad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sad."
                android:textColor="@color/black"
                android:textSize="20sp"
                app:drawableTopCompat="@drawable/image_sad" />

        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/reactImgBtnClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|end"
        android:layout_margin="4dp"
        android:background="@drawable/shape_circle_grayish"
        android:contentDescription="Close custom dialog"
        android:elevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"
        tools:ignore="TouchTargetSizeCheck|RtlHardcoded" />
</androidx.constraintlayout.widget.ConstraintLayout>
