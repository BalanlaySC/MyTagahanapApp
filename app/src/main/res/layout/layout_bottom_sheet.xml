<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btsTxtLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        android:text="Insert Location"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray_25darker" />

    <LinearLayout
        android:id="@+id/bsImageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/locationimg1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            app:strokeColor="@color/divider"
            app:strokeWidth="5dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/locationimg2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            app:strokeColor="@color/divider"
            app:strokeWidth="5dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray_25darker" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/btnDirections"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginVertical="2dp"
            android:layout_weight="5"
            android:background="@drawable/roundcorner_lightblue"
            android:backgroundTint="@color/go_button"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Directions"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgbtnShowMore"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:background="@drawable/roundcorner_lightblue"
            android:contentDescription="Show more option"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_show_more" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray_25darker" />

    <LinearLayout
        android:id="@+id/layoutShowMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/smbtnViewRooms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="3"
            android:background="@drawable/roundcorner_lightblue"
            android:backgroundTint="@color/divider"
            android:elevation="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:minHeight="50dp"
            android:padding="5dp"
            android:text="View Rooms"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/smbtnSetDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="3"
            android:background="@drawable/roundcorner_lightblue"
            android:backgroundTint="@color/light_brown"
            android:elevation="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:minHeight="50dp"
            android:padding="5dp"
            android:text="Set as Default"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/smbtnChangePhotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="3"
            android:background="@drawable/roundcorner_lightblue"
            android:backgroundTint="@color/UEP_yellow"
            android:elevation="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:minHeight="50dp"
            android:padding="5dp"
            android:text="Change Photo/s"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/smbtnSuggestLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="3"
            android:background="@drawable/roundcorner_lightblue"
            android:backgroundTint="@color/UEP_yellow"
            android:elevation="2dp"
            android:gravity="center"
            android:minHeight="50dp"
            android:padding="5dp"
            android:text="Suggest Location"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>